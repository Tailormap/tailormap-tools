{
  "name": "@tailormap-viewer/tools",
  "version": "0.0.18",
  "description": "some helper scripts to perform common tasks like i18n extraction and publishing libraries",
  "scripts": {
    "lint": "eslint",
    "publish-lib": "npm version patch && npm publish --scope=@tailormap-viewer --registry=https://repo.b3p.nl/nexus/repository/npm-public"
  },
  "bin": {
    "tm-build-application": "bin/build-application.js",
    "tm-publish-library": "bin/publish-new-release.js",
    "tm-publish-all-libraries": "bin/publish-all.js",
    "tm-extract-i18n": "bin/extract-i18n.js",
    "tm-add-ng-libraries": "bin/add-ng-libraries.js"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0"
  }
}
